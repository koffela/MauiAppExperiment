<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppExperiment.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppExperiment"
    xmlns:compat="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls.Compatibility"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAppExperiment"
    BackgroundColor="Transparent"
    >
    <TabBar>
        <Tab Title="Home" Icon="bxhome.svg">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>
        <Tab Title="Discord" Icon="discord.svg">
            <ShellContent ContentTemplate="{DataTemplate local:DiscordPage}" />
        </Tab>
        <Tab Title="Experimental" Icon="bxwrench2.svg">
            <ShellContent ContentTemplate="{DataTemplate local:ExperimentalPage}" />
        </Tab>
        <Tab Title="Settings" Icon="bxcog.svg">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>
